@model DataVehicule
@{
    ViewBag.Title = "Index";
}
@Html.ActionLink("Déconnexion", "Login", "Home", null, new { @class = "btn btn-primary" })

<h2>Gestionnaire de véhicules</h2>
<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th scope="col">Modèle</th>
            <th scope="col">Marque</th>
            <th scope="col">Option</th>
            <th scope="col">Validation</th>
        </tr>
    </thead>
    @{

        foreach (var item in Model.Vehicules)
        {





            <tbody>
                <tr>
                    <td>@item.model</td>
                    <td>@item.marque</td>
                    <td>@item.textOption</td>
                    <td>@Html.ActionLink("Valider", "Validation", "Home", new { idvehicule = item.id, data = Model }, new { @class = "btn btn-success" })</td>
                </tr>
            </tbody>


        }

    }
</table>